program = nonlinear 

#===============================================================================
# User Options
#===============================================================================

F90 = gfortran

#===============================================================================
# Targets
#===============================================================================

$(program): nonlinear.f90 bisect.f90 myfun.f90 
	$(F90) $(FFLAGS) $(LDFLAGS) -o $@ $^
clean:
	@rm -f *.o *.mod $(program)
neat:
	@rm -f *.o *.mod
